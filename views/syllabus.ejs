    <script>
        function toggleDropdown() {
            let menu = document.getElementById("dropdown-menu");
            menu.style.display = (menu.style.display === "block") ? "none" : "block";
        }

        function showSemester(sem) {
            document.querySelectorAll(".semester").forEach(div => div.style.display = "none");
            document.getElementById("sem" + sem).style.display = "block";
            document.getElementById("dropdown-menu").style.display = "none"; // Hide dropdown after selection
        }
    </script>

</body>

