    <div class="container">
        <main class="content">
            <h1 style="text-align: center;">Syllabus</h1>
            <hr style="height: 3px;background-color: #0073e6c4; border: none;">

            <!-- ðŸ”¹ Dropdown for Semesters -->
            <div class="dropdown">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;    <button class="dropdown-button" onclick="toggleDropdown()">Select Semester</button>
                <ul class="dropdown-menu" id="dropdown-menu">
                    <% for(let sem in syllabus) { %>
                        <li onclick="showSemester('<%= sem %>')">Semester <%= sem %>
                        </li>
                        <% } %>
                </ul>
            </div>

            <!-- ðŸ”¹ Syllabus Content -->
            <div id="syllabus-content">
                <% for(let sem in syllabus) { %>
                    <div class="semester" id="sem<%= sem %>" style="display: <%= sem === '1' ? 'block' : 'none' %>;">
                        <h2>Semester <%= sem %>
                        </h2>
                        <ul>
                            <% syllabus[sem].forEach(subject=> { %>
                                <li><strong>
                                        <%= subject.code %>
                                    </strong> - <%= subject.subject %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>
            </div>
        </main>
    </div><br><br>
